{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "waitFor": "onCreateCommand",
  "updateContentCommand": "/bin/bash .devcontainers/updateContent.sh",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "cd server && npm start",
    "client": "export NG_CLI_ANALYTICS=\"false\"; cd client && npm start",
    "portSetup": "/bin/bash .devcontainers/portSetup.sh"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "server/.env"
      ]
    }
  },
  "portsAttributes": {
    "4200": {
      "label": "Client",
      "onAutoForward": "openPreview"
    },
    "5000": {
      "label": "Server"
    }
  },
  "forwardPorts": [4200, 5000]
}
