{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 2
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "bash scripts/updateContent.sh",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "cd server && npm start",
    "client": "cd client && npm start"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "src/App.js"
      ]
    }
  },
  "portsAttributes": {
    "4200": {
      "label": "Application",
      "onAutoForward": "openPreview"
    },
    "5000": {
      "label": "API"
    }
  },
  "forwardPorts": [4200, 5000]
}